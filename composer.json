{
    "name": "ukietech-corp/laravel-maintenance",
    "type": "library",
    "description": "Laravel maintenance mode on steroids",
    "keywords": [
        "Ukietech-Corp",
        "laravel-maintenance"
    ],
    "homepage": "https://github.com/Ukietech-Corp/laravel-maintenance",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Kolodiy",
            "email": "kolodiy.ivan.i@gmail.com",
            "homepage": "http://ikolodiy.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Ukietech\\LaravelMaintenance\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ukietech\\LaravelMaintenance\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
